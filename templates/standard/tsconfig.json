{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "dist",
        "strict": true,
	    "esModuleInterop": true,  /* Ensure that casing is correct in imports. */
        "forceConsistentCasingInFileNames": true,  /* Enable all strict type-checking options. */
        "skipDefaultLibCheck": true,  /* Skip type checking all .d.ts files. */
        "resolveJsonModule": true  /* Enable importing .json files. */
    }
}

